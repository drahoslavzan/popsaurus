{
	"name": "PopSaurus",
	"author": "Dave Maxwell",
	"version": "1.0.0",
	"description": "Thesaurus lookup using a pop-up window.",
	"icons": {
		"128": "assets/icon-128.png"
	},
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"permissions": [
		"activeTab",
		"contextMenus",
		"*://*/*"
	],
	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": true
	},
	"browser_action": {
		"default_title": "PopSaurus",
		"default_icon": "assets/icon-48.png",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"js": ["dialog.js"],
			"css": ["styles.css"],
			"matches": ["*://*/*"]
		}
	],
	"manifest_version": 2
}